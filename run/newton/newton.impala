    //     4.0*a*a*a*b-4.0*a*b*b*b
    // ]
    complex_sub([
        complex_mul([z,
        complex_mul([z,
        complex_mul([z,
        complex_mul([z,
            z
        ])
        ])
        ])
        ]),
        [1.0,0.0]
    ])
}

fn @(true) newton(g:fn([f64*2])->[f64*2],mut z:[f64*2]) -> [f64*2] {
    // f(z)
    for i in range(0, 25) {
        let Df=rev_diff(f);
        // let za=[z(0),z(1)];
        let Dfr=Df(z);
        // let Df=rev_diff(f)(z);
        let fz=Dfr(0);
        let Dz=Dfr(1);
        let da=Dz([1.0,0.0]);
        let db=Dz([0.0,1.0]);
        // let dz=da; // cool but wrong
        // let dz=db;
        // let dz=[da(0),db(1)];
        // let dz=[da(0)+db(0),db(1)+da(1)];
        // let dz=Dz([1.0,1.0]);
        // let dz=Dz([0.5,0.5]);
        let dz=[da(0),db(0)];
        // let dz=[db(1),db(0)];

        z=complex_sub( [
            z,
            complex_div([fz,dz])
        ])
