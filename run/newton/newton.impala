fn range(mut b: i32, e: i32, body: fn(i32) -> ()) -> () {
    while b < e {
        body(b++)
    }
}

fn @(true) complex_add(zt:[[f64*2]*2]) -> [f64*2] {
    let a = zt(0)(0);
    let b = zt(0)(1);
    let c = zt(1)(0);
    let d = zt(1)(1);
    [a+c, b+d]
}

fn @(true) complex_sub(zt:[[f64*2]*2]) -> [f64*2] {
    let a = zt(0)(0);
    let b = zt(0)(1);
    let c = zt(1)(0);
    let d = zt(1)(1);
    [a-c, b-d]
}

fn @(true) complex_mul(zt:[[f64*2]*2]) -> [f64*2] {
    let a = zt(0)(0);
    let b = zt(0)(1);
    let c = zt(1)(0);
    let d = zt(1)(1);
    [a*c-b*d, a*d+b*c]
}

fn @(true) complex_div(zt:[[f64*2]*2]) -> [f64*2] {
    let a = zt(0)(0);
    let b = zt(0)(1);
    let c = zt(1)(0);
    let d = zt(1)(1);
    let norm=c*c+d*d;
    [
        (a*c+b*d)/norm,
        (b*c-a*d)/norm
    ]
}


fn f(z:[f64*2]) -> [f64*2] {
    // let a = z(0);
    // let b = z(1);
    // [
        // z^3-1
    //     a*a*a-3.0*a*b*b-1.0,
